<td><img src="http://fweddit.com/favicon.ico" width="20" alt=""></td>
<td><a href="http://{{vhost}}">{{name}}</a></td>
<td><a href="http://gitlab.j4lp.com/{{name}}/commit/{{commit}}">{{truncate commit 12}}</a></td>
<td>{{image}}</td>
<td>{{container}}</td>
<td>
    {{#is status 'started'}}
        <span class="label label-success">{{status}}</span>
    {{/is}}
    {{#is status 'stopped'}}
        <span class="label label-danger">{{status}}</span>
    {{/is}}
    {{#is status 'error'}}
        <span class="label label-warning">{{error}}</span>
    {{/is}}
</td>
<td>
    <div class="btn-group btn-group-justified">
        {{#is status 'started'}}
            <a href="#" class="btn btn-small btn btn-belize-hole js-app-restart">Restart</a>
            <a href="#" class="btn btn-small btn-alizarin js-app-stop">Stop</a>
        {{/is}}
        {{#is status 'stopped'}}
            <a href="#" class="btn btn-small btn btn-nephritis js-app-start">Start</a>
        {{/is}}
    </div>
</td>